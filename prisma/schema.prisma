generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HSITCalculatorInput {
  id                    String   @id @default(cuid())
  age                   Int
  gender                String
  hasHSITPlan           Boolean
  currentMonthlyPremium Float?
  hasDeductible         Boolean?
  deductibleAmount      Float?
  coInsurancePercentage Float?
  criticalIllnessCover  Float?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  results HSITCalculatorResult[]
}

model HSITCalculatorResult {
  id                    String   @id @default(cuid())
  inputId               String
  monthlySavingsNeeded  Float
  yearlySavingsNeeded   Float
  lowInflationPremium   Float
  highInflationPremium  Float
  expectedOOP           Float
  projectedSavings      Float
  guidanceMessages      String   // JSON string of guidance messages
  createdAt             DateTime @default(now())
  
  input HSITCalculatorInput @relation(fields: [inputId], references: [id])
}